/* variable */
padding = 25px
border = 5px solid #8888bb

/* formatting */
body 
        font: 24px Helvetica
        background: #999999
    

    #main 
        min-height: 800px
        margin: 0px
        padding: 0px
        display: flex
        flex-flow: row
        

    
        //the article in the center of the page
        article 
            padding padding
            border: 5px solid #cccc33
            background: #dddd88
            flex: 3 1 60%
            order: 2
            border-color: #000000
    

        //the nav for the links
        nav 
            padding padding
            border border
            background: #ccccff
            flex: 1 6 20%
            order: 1
            border-color: #000000
            text-align: right
    
  
        //aside next to the article
        aside 
            padding padding
            border
            background: #ccccff
            flex: 1 6 20%
            order: 3
            border-color: #000000
            font-style: italic
    

    header 
        font: 50px Helvetica
    
 
    header, footer 
        display: block
        padding: 15px
        min-height: 100px
        border: 5px solid #eebb55
        background: #ffeebb
    
 
    /* Too narrow to support three columns */
    @media all and (max-width: 640px) 
        #main, #page 
            flex-direction: column
        

        #main > article, #main > aside 
        /* Return them to document order */
            order: 1
        

        #main > nav 
            order: 0
            text-align: left
        
  
        #main > nav, #main > aside, header, footer 
            min-height: 50px
            max-height: 50px
            
        
    